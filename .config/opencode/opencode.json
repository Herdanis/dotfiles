{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "session_child_cycle": "<leader>right",
    "session_child_cycle_reverse": "<leader>left"
  },
  "permission": {
    "bash": "ask",
    "edit": "ask",
    "webfetch": "ask"
  },
  "provider": {
    "lmstudio": {
      "name": "LM Studio (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      }
    }
  },
  "mcp": {
    "MCP_DOCKER": {
      "type": "local",
      "command": [
        "docker",
        "mcp",
        "gateway",
        "run"
      ],
      "enabled": true
    },
    "tmux": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "tmux-mcp",
        "--shell-type=fish"
      ]
    }
  }
}
